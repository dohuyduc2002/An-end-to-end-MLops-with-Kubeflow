{
  "schemaVersion": 36,
  "title": "Underwriting Model Quality",
  "uid": "underwriting-model-quality",
  "version": 1,
  "panels": [
    {
      "type": "gauge",
      "title": "Prediction Confidence",
      "targets": [
        {
          "expr": "api_avg_confidence"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "red"
              },
              {
                "value": 0.7,
                "color": "yellow"
              },
              {
                "value": 0.9,
                "color": "green"
              }
            ]
          }
        }
      }
    },
    {
      "type": "gauge",
      "title": "Prediction Entropy",
      "targets": [
        {
          "expr": "api_prediction_entropy"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "green"
              },
              {
                "value": 0.5,
                "color": "yellow"
              },
              {
                "value": 0.8,
                "color": "red"
              }
            ]
          }
        }
      }
    },
    {
      "type": "gauge",
      "title": "Distribution Shift",
      "targets": [
        {
          "expr": "api_distribution_shift"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 5,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "green"
              },
              {
                "value": 2,
                "color": "yellow"
              },
              {
                "value": 4,
                "color": "red"
              }
            ]
          }
        }
      }
    }
  ]
}


{
  "schemaVersion": 36,
  "title": "Underwriting Data Drift",
  "panels": [
    {
      "type": "gauge",
      "title": "Data Drift Score",
      "targets": [{ "expr": "app_data_drift_score" }],
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": 0,   "color": "green" },
              { "value": 0.1, "color": "yellow" },
              { "value": 0.3, "color": "red" }
            ]
          }
        }
      }
    }
  ]
}
